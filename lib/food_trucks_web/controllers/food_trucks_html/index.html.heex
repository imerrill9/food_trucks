<h1 class="text-2xl font-bold text-center my-8">Food Trucks</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 ">
  <%= for truck <- @food_trucks do %>
    <div class="bg-white rounded-lg shadow-lg p-2 m-2">
      <div class="font-bold text-lg mb-2"><%= truck["applicant"] %></div>
      <p><strong>Address:</strong> <%= truck["address"] %></p>
      <p><strong>Food Items:</strong> <%= truck["fooditems"] %></p>
    </div>
  <% end %>
</div>
